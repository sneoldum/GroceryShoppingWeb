@model LoginViewModel

@{
    ViewBag.Title = "title";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingWebUI</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<header>
</header>
<bodyLogin>

    <div class="contain">
        <div class="blueBg">
            <div class="box signin">
                <h2>Already have an account ?</h2>
                <button class="signinBtn" asp-controller="Login">Sign in</button>
            </div>
            <div class="box signup">
                <h2>Don't have an account ?</h2>
                <button class="signupBtn">Sign up</button>
            </div>

        </div>
        <div class="formBx">
            <div class="form signinForm">
                @*
                <h3>Sign In</h3>
                @Html.TextBoxFor(m=>m.Email,new {@type="text",@class="form-control",@placeholder="Name"})

                <input type="email" placeholder="Email" asp-for="Email"/>
                <input type="password" placeholder="Password" asp-for="PasswordHash"/>
                <input type="submit" value="Login" asp-controller="Login"/>
                <a href="#" class="forgot">Forgot password</a>*@
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <h3>Sign In</h3>

                    @Html.TextBoxFor(m=>m.Email,new {@type="text",@class="form-control",@placeholder="Email"})
                    <span asp-validation-for="UserDetail.Email"></span>

                    @Html.TextBoxFor(m=>m.Password,new {@type="password",@class="form-control",@placeholder="Password"})
                    <span asp-validation-for="UserDetail.PasswordHash"></span>
                    
                    <input type="submit" value="Login" />

                    <a href="#" class="forgot">Forgot password</a>

                }

            </div>
            <div class="form signupForm">
                <form>
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["message"]
                        </div>
                    }
                    <h3>Sign Up</h3>
                    @Html.TextBoxFor(m=>m.FirstName,new {@type="text",@class="form-control",@placeholder="First name"})
                    <span asp-validation-for="UserDetail.FirstName"></span>
                    @Html.TextBoxFor(m=>m.LastName,new {@type="text",@class="form-control",@placeholder="Last name"})
                    <span asp-validation-for="UserDetail.LastName"></span>
                    @Html.TextBoxFor(m=>m.Email,new {@type="text",@class="form-control",@placeholder="Email"})
                    <span asp-validation-for="UserDetail.Email"></span>
                    @Html.TextBoxFor(m=>m.Password,new {@type="password",@class="form-control",@placeholder="Password"})
                    <span asp-validation-for="UserDetail.PasswordHash"></span>
                    <input type="submit" value="Register" asp-controller="Login" asp-action="Register"/>
                </form>
            </div>
        </div>
    </div>

    <script>
        const signinBtn = document.querySelector('.signinBtn');
        const signupBtn = document.querySelector('.signupBtn');
        const formBx = document.querySelector('.formBx');
        const body = document.querySelector("bodyLogin");

        signupBtn.onclick = function () {
            formBx.classList.add('active');
            body.classList.add('active');
        }
        signinBtn.onclick = function () {
            formBx.classList.remove('active');
            body.classList.remove('active');

        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</bodyLogin>
</html>
